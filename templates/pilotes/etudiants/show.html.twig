<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StageConnect - Fiche étudiant</title>
    <link rel="stylesheet" href="{{ asset('css/styles_page_pilote.css') }}">
</head>
<body>
{% set pilotePage = true %}
{% include 'partials/navbar-pilote.html.twig' %}

<main>
    <div class="main-content-gestion">
        <div class="back-button">
            <a href="{{ url('pilotes/etudiants') }}"><span class="arrow">←</span> Retour</a>
        </div>
        <div class="eleve-detail">
            <div class="eleve-header">
                <div class="eleve-nom-prenom">{{ student.Nom_Utilisateur }} {{ student.Prenom_Utilisateur }}</div>
                <div class="eleve-promotion">{{ student.Nom_Promotion }} - {{ student.Nom_Campus|default('Non assigné') }}</div>
            </div>

            <div class="eleve-info-container">
                <div class="eleve-info-col">
                    <div class="eleve-info-groupe">
                        <label>Adresse mail :</label>
                        <input type="email" value="{{ student.Email_Utilisateur }}" readonly class="eleve-input">
                    </div>

                    <div class="eleve-info-groupe">
                        <label>Téléphone :</label>
                        <input type="tel" value="{{ student.Telephone_Utilisateur|default('Non renseigné') }}" readonly class="eleve-input">
                    </div>

                    <a href="{{ url('pilotes/etudiants/' ~ student.Id_Etudiant ~ '/reset-password') }}" class="eleve-btn-password">Modifier le mot de passe</a>
                </div>

                <div class="eleve-competences-col">
                    <h2 class="eleve-competences-titre">Compétences :</h2>
                    <div class="eleve-competences-grid">
                        {% if student.skills|length > 0 %}
                            {% for skill in student.skills %}
                                <div class="eleve-competence">{{ skill.Nom_Competence }}</div>
                            {% endfor %}
                        {% else %}
                            <div class="no-skills">Aucune compétence renseignée</div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="eleve-actions">
                <div class="eleve-liens">
                    <a href="{{ url('pilotes/etudiants/' ~ student.Id_Etudiant ~ '/wishlist') }}" class="eleve-btn-wishlist">Accéder à la wishlist</a>
                    <a href="{{ url('pilotes/etudiants/' ~ student.Id_Etudiant ~ '/offres') }}" class="eleve-btn-offres">Accéder aux offres postulées</a>
                </div>

                <div class="eleve-admin-actions">
                    <a href="{{ url('pilotes/etudiants/' ~ student.Id_Etudiant ~ '/modifier') }}" class="eleve-btn-modifier">Modifier</a>
                    <a href="{{ url('pilotes/etudiants/' ~ student.Id_Etudiant ~ '/supprimer') }}" class="eleve-btn-supprimer" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet étudiant ?')">Supprimer</a>
                </div>
            </div>
        </div>
    </div>
</main>

{% include 'partials/footer.html.twig' %}
<script src="{{ asset('js/frontend_script.js') }}"></script>
</body>
</html>